{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch gravity",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server/main",
            "args": [
                "server",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "true",
                "INSTANCE_IP": "0.0.0.0",
                "LISTEN_ONLY": "true"
            }
        },
        {
            "name": "Launch gravity external-dns",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/external-dns/main/",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "true",
                "GRAVITY_URL": "http://localhost:8008",
                "GRAVITY_TOKEN": "test"
            }
        },
        {
            "name": "Attach to gravity",
            "type": "go",
            "request": "attach",
            "debugAdapter": "dlv-dap",
            "mode": "remote",
            "port": 8011,
            // Replace with IP of machine gravity is running on
            "host": "127.0.0.1",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/workspace"
                },
            ]
        }
    ]
}
