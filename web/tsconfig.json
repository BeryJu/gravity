{
    "compilerOptions": {
        "strict": true,
        "rootDir": ".",
        "baseUrl": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "inlineSources": true,
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ]
    }
}
